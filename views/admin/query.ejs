<%-include("../../partials/admin/header.ejs")%>

<body>
    <%-include("../../partials/admin/header1.ejs")%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include("../../partials/admin/left.ejs")%>
               <div class="col-md-9">
                <h2 >Query Management</h2>
                <%if(message!=='message'){%>
                    <p><%=message%></p>
                <%}%>      
                <table class="table table-hover">
                     <tr>
                        <th>S.No</th>
                        <th>User Email</th>
                        <th>User Query</th>
                        <th>User Date</th>
                        <th>Status</th>
                        <th>Delete</th>
                     </tr>   
                        <%data.forEach((val,key)=>{%>
                            <tr>
                            <td><%=key+1%></td>
                            <td><%=val.email%></td>
                            <td><%=val.query%></td>
                            <td><%=val.postedDate%></td>

                            <%if(val.status=="Need to Reply"){%>
                                <td><a href="/admin/queryForm/<%=val.email%>/<%=val.query%>/<%=val.id%>"><button class="btn btn-info"><%=val.status%></button></a></td>
                            <%}else{%>
                                <td><a href="/admin/queryForm/<%=val.email%>/<%=val.query%>/<%=val.id%>" ><button disabled><%=val.status%></button></a></td>
                            <%}%>
    
                            <td><a href="/admin/deleteQuery/<%=val.id%>"><button>Delete</button></a></td>
                        </tr>
                        <%})%>
                </table>
               </div>
            </div>
        </div>
    </section>
</body>