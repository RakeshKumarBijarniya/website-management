<%-include("../../partials/admin/header.ejs")%>

<body>
    <%-include("../../partials/admin/header1.ejs")%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include("../../partials/admin/left.ejs")%>
               <div class="col-md-9">
                <h2>Testinominals Management</h2>
                <table class="table table-hover">
                    <tr>
                        <th>Total Testinominals: <%=totalTestinominal%></th>
                        <th>Total Published Testinominals: <%=totalPublishedTestinominal%></th>
                        <th>Total Unpublished Testinominals: <%=totalUnpublishedTestinominal%></th>
                    </tr>
                </table>
                <table class="table table-hover">
                    <tr>
                        <th>S.No</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th>Delete</th>
                    </tr>
                    <%data.forEach((val,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><img src="/upload/<%=val.image%>" style="width: 70px;" alt=""></td>
                            <td><%=val.name%></td>
                            <td><%=val.desc%></td>
                            <td><%=val.createdData%></td>
                            <td><a href="/admin/changeStatus/<%=val.id%>/<%=val.status%>"><button class="testinominal-btn btn btn-warning"><%=val.status%></button></a></td>
                            <td><a href="/admin/deleteTesti/<%=val.id%>/<%=val.image%>"><i class="bi bi-trash3"></i></a></td>
                        </tr>
                    <%})%>
                </table>
               </div>
            </div>
        </div>
    </section>
</body>