<%-include("../../partials/admin/header.ejs")%>

<body>
    <%-include("../../partials/admin/header1.ejs")%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include("../../partials/admin/left.ejs")%>
               <div class="col-md-9">
                <h2>Banner Management</h2>
                <a href="/admin/newbanner"><button class="form-control btn-primary">Add New Record Here</button></a>
                <table class="table table-hover">
                    <tr>
                    <th>S.NO</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>More Details</th>
                    <th>Create Date</th>
                    <th>Status</th>
                    <th>Update</th>
                    <th>Delete</th>
                    </tr>
                    <%data.forEach((val,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><%=val.title%></td>
                            <td><%=val.desc%></td>
                            <td><img src="/upload/<%=val.image%>" style="width: 60px;" alt=""></td>
                            <td><%=val.mdesc%></td>
                            <td><%=val.postedDate%></td>
                            <td><a href="/admin/bannersUpdate/<%=val.status%>/<%=val.id%>"><button style="width:120px;" class="btn btn-success"><%=val.status%></button></a></td>
                            <td><a href="/admin/updateBanner/<%=val.id%>"><i class="bi bi-pencil"></i></a></td>
                            <td><a href="/admin/deleteBanner/<%=val.id%>/<%=val.image%>"><i class="bi bi-trash3"></i></a></td>
                        </tr>
                        
                        <%})%>
                        <tr>
                            <%if(data.length == 0){%>
                                <td colspan="9" class="text-center"><h5>No Record Found</h5></td>
                            <%}%>  
                        </tr>
                </table>
               </div>
            </div>
        </div>
    </section>
</body>